extend layout
block content
  div.main-container
    form(method='POST')
      div.form-group
        label.red-text(for='name') Category Name:
        if category
          input#name.form-control(type='text', placeholder='Name of Category' name='name' required value= category.name)
        else
          input#name.form-control(type='text', placeholder='Name of Category' name='name' required)
      div.form-group
        label.green-text(for='description') Description:
        if category && category.description
          input#description.form-control(type='text', placeholder='Description' name='description' value=category.description)
        else
          input#description.form-control(type='text', placeholder='Description' name='description')
      button.btn.btn-primary(type='submit') Submit
