extends layout

block content
  div(class="main-container")
    div.header
      h1.blue-text= title
      a(href="/ingredient/create") 
        img(class="add-btn" src="/images/add.png")
    div(class="ingredient-list-container")
      if ingredients_list.length
        each ingredient in ingredients_list
          div.ingredient-container
            if(ingredient.img)
              img.list-img(src=ingredient.img)
            else
              img.list-img(src="/images/pusheen.jpg")
            a(href= ingredient.url)
              p.blue-text= ingredient.name
            div.ingredient-category
            if ingredient.category.length > 0
              each category in ingredient.category
                a(href=category.url)
                  p.purple-text= category.name
            else
              p Other
            p.green-text $#{ingredient.price}
            p.yellow-text Quantity: #{ingredient.quantity}

